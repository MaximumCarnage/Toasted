<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF4500"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="301dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/menubgkitchen"
        android:elevation="-12dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="303dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/menubgkitchen" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView9"
        android:layout_marginStart="-39dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/toast2"
        android:text="Get Toasted"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<com.brg.toasted.GifImageView-->
        <!--android:id="@+id/GifImageView"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginBottom="100dp"-->
        <!--android:layout_centerInParent="true" />-->


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="384dp"
        android:background="@drawable/menubgkitchen" />


    <Button
        android:id="@+id/buttonPlay"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="71dp"
        android:layout_height="58dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp"
        android:layout_marginStart="192dp"
        android:alpha="2"
        android:elevation="12dp"
        android:fontFamily="@font/toast2"
        android:text="Play"
        android:textColor="#000000"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="104dp"
        android:layout_height="97dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        app:srcCompat="@drawable/menutoaster" />

    <Button
        android:id="@+id/buttonQuit"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="71dp"
        android:layout_height="58dp"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonPlay"
        android:layout_marginEnd="181dp"
        android:alpha="2"
        android:elevation="12dp"
        android:fontFamily="@font/toast2"
        android:onClick="clickexit"
        android:text="quit"
        android:textColor="#000000"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

</RelativeLayout>